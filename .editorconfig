# Top-most EditorConfig file
root = true

###############
# Global Defaults
###############

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

###############
# Script Files
###############

[*.{ps1,vbs,hta}]
indent_style = space
indent_size = 4
charset = utf-8-bom

###############
# Structured Data
###############

[*.{yaml,yml,json}]
indent_style = space
indent_size = 2

###############
# Markdown
###############

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

###############
# Plain Text
###############

[*.txt]
indent_style = space
indent_size = 2

###############
# Web & XML
###############

[*.{html,xml}]
indent_style = space
indent_size = 2

###############
# .config / .nuspec
###############

[*.{config,nuspec,csproj}]
indent_style = space
indent_size = 2

###############
# Code Files
###############

[*.py]
indent_style = space
indent_size = 4

[*.{js,ts}]
indent_style = space
indent_size = 2

[*.{c,cpp,h,hpp,cs}]
indent_style = space
indent_size = 4

###############
# Shell Scripts & Config
###############

[*.{sh,bash}]
indent_style = space
indent_size = 4

[*.{conf,ini}]
indent_style = space
indent_size = 4

###############
# Binary / Packages / Archives
###############

[*.{exe,pdf,zip,tar,gz,7z,iso,nupkg,bak,png}]
charset = binary
